test.serial('test-async-manual',async function (t) {

    var py_code = `
async def afunc(arg0, arg1):
    await asyncio.sleep(1)
    return arg0 + arg1
    `;


    pyjs.exec(py_code, main_scope)
    var afunc = pyjs.eval("afunc", main_scope)
    var afut0 = afunc.py_call(13,17)
    var fensure_future = pyjs.eval("asyncio.ensure_future", main_scope)
    var afut1 = fensure_future.py_call(afut0)
    // afuture = pyjs.eval("asyncio.ensure_future(afunc())", main_scope)
    var add_done_cb = pyjs.eval("pyjs._add_resolve_done_callback", main_scope)


    p  = new Promise(function(resolve, reject) {


        add_done_cb.py_call(afut1, resolve, reject)
    })

    p.then(function(value) {
       afut1.delete()
      }, function(reason) {

       afut1.delete()
    });
    var res = await p


    t.is(res, 30)
});


test.serial('test-async',async function (t) {

    var py_code = `
async def muladd_inner(*args):
    return args[0]*args[1] + args[2]

async def muladd(a, b, c):
    await asyncio.sleep(0.1)
    return await muladd_inner(a,b,c)
    `;



    pyjs.exec(py_code, main_scope)
    var muladd = pyjs.eval("muladd", main_scope)

    var r42 = await muladd.py_call_async(4,10,2)
    t.is(r42, 42)

    var p43 = muladd.py_apply_async([4,10], {c:3})
    t.is(await p43, 43)


});


test.serial('test-async-errors',async function (t) {

    var py_code = `
async def muladd_inner(*args):
    return args[0]*args[1] + args[2] + c

async def muladd(a, b, c):
