test.serial('test-getitem-multi-key',async function (t) {

    var py_code = `
import numpy
class Foo(object):
    def __init__(self):
        self.a = numpy.identity(3)
    def __getitem__(self, key):
        return int(self.a[key])
`
    ;


    pyjs.exec(py_code, main_scope)
    var foo = pyjs.eval("Foo()", main_scope)
    t.is(foo.py_getitem(0,1),0)
    t.is(foo.py_getitem(1,0),0)
    t.is(foo.py_getitem(0,0),1)
    t.is(foo.py_getitem(1,1),1)
    foo.delete()
});


